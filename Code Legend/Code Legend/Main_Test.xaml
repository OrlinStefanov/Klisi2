<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Code_Legend.Main_Test"
             Title="Tests">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Settings" IconImageSource="settings_img.png" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout>

            <Grid WidthRequest="500" HeightRequest="1000">

                <Image Source="background_img.jpg"
                   Aspect="AspectFill" />

                <Grid BackgroundColor="Transparent" WidthRequest="380" HeightRequest="650" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,0,0,200">

                    <Button Text="UI-first steps" TextColor="#fff" BackgroundColor="Transparent" BorderColor="#fff" BorderWidth="1" CornerRadius="0" FontSize="Medium" ImageSource="test_img.png" WidthRequest="300" HeightRequest="50" VerticalOptions="Start" HorizontalOptions="Center" Margin="0,140,0,0" Clicked="Button_Clicked"/>

                </Grid>
                
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>